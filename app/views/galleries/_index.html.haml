.row
- photos.in_groups_of(3) do |group|
  - group.compact.each do |photo|
    - cache(photo, :expires_in => 5.minutes.to_i) do
      .col-lg-3.col-md-4.col-xs-6.thumb
        = image_tag (photo.file_url), class: "img-sz"
        %h4= link_to photo.title, photo
        = link_to "Edit", edit_gallery_path(photo) , remote: true, class: "btn btn-info btn-xs"
        = link_to "Delete", gallery_path(photo),remote: true, method: :delete, data: { confirm: "You sure?" }, class: "btn btn-warning btn-xs"
